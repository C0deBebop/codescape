<div class="container">
   <div id="content-flex">
      <div id="edit-content">
         <a href="/forums/<%= @post._id %>">&#x3c;&#x3c; Return to post</a></h2>
          <div class="discussions" id="edit-discussion-forum">
            <form method="post">
                <h4><%= @page %></h4>
                <input type="hidden" name="id" value="<%= @post._id %>">
                <input type="text" name="topic" value="<%=   @post.topic %>">
                 <select name="category">
                    <option value="category" disabled selected value>category</option>
                    <option value="general knowledge, #F5DE7C" data-color="#F5DE7C">General knowledge</option>  
                    <option value="backend development, #7CF5A1" data-color="#7CF5A1">Backend Development</option>  
                    <option value="frontend development, #5B52C4" data-color="#5B52C4">Frontend Development</option>  
                    <option value="computer science, #7CABF5" data-color="#7CABF5">Computer science</option>  
                    <option value="mobile development, #F57CE2" data-color="#F57CE2">Mobile Development</option>  
                    <option value="game development, #939393" data-color="#939393">Game Development</option>  
                    <option value="AR/VR, #D80B23" data-color="#D80B23">AR/VR</option>  
                    <option value="AI, #ED5252" data-color="#ED5252">AI</option>  
                    <option value="indie development, #130BD8" data-color="#130BD8">Indie Development</option>  
                </select>    
                <select name="tag">
                    <option value="tag" disabled selected value>tag</option>
                    <option value="CSS">CSS</option>  
                    <option value="HTML">HTML</option>  
                    <option value="PHP">PHP</option>  
                    <option value="nim">Nim</option>  
                    <option value="python">Python</option>  
                    <option value="javascript">JavaScript</option> 
                    <option value="java">Java</option>  
                    <option value="csharp">C#</option>  
                    <option value="c">C</option>  
                    <option value="cplusplus">C++</option>  
                    <option value="rust">Rust</option>  
                    <option value="gleam">Gleam</option> 
                    <option value="elixir">Elixir</option>  
                    <option value="lua">Lua</option>  
                    <option value="ruby">Ruby</option>  
                    <option value="sinatra">Sinatra</option>  
                    <option value="ruby on rails">Ruby on Rails</option>  
                    <option value="react">React</option>  
                    <option value="vue">Vue</option>  
                    <option value="phoenix">Phoenix</option>  
                    <option value="flask">Flask</option>  
                    <option value="django">Django</option>  
                    <option value="lustre">Lustre</option>  
                    <option value="coldfusion">Coldfusion</option> 
                    <option value="jester">Jester</option>  
                    <option value="fastAPI">FastAPI</option>  
                    <option value="erlang">Erlang</option>  
                    <option value="swift">Swift</option>  
                    <option value="kotlin">Kotlin</option>  
                    <option value="objective-c">Objective-C</option> 
                    <option value="vapor swift">Vapor Swift</option>  
                    <option value="ktor">Ktor</option>  
                    <option value="go">Go</option>  
                    <option value="zig">Zig</option>  
                    <option value="cobol">Cobol</option>  
                    <option value="lua">Lua</option> 
                    <option value="godot">Godot</option> 
                    <option value="OOP">OOP</option> 
                    <option value="programming">programming</option> 
                </select>    
                <textarea name="discussion" placeholder="<%=  @post.discussion %>"></textarea>
                <button type="button" id="add-tags">Add tags</button> 
                <input type="submit" value="Update topic">
            </form>
           </div> 
      </div>
   </div>
</div>